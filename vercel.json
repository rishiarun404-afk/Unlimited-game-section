{
    "buildCommand": "npm install",
    "outputDirectory": "src",
    "public": "src",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "ignore": [
        "server.js",
        "package.json",
        "node_modules/**"
    ]
}